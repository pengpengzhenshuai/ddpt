<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
	<!-- spring和mybatis整合后，需要指定使用的日志类 -->
		<setting name="logImpl" value="log4j"/>
	</settings>

	<!-- 设置类型的别名 -->
	<typeAliases>
		<!-- <typeAlias type="com.qianfeng.crud.Employee" alias="employee"/> -->
		<!--<typeAlias type="com.qianfeng.entity.Employee" alias="employee"/>-->
		<typeAlias type="com.qianfeng.vo.VGradeInfo" alias="VGradeInfo"/>
		<typeAlias type="com.qianfeng.vo.VUserRoleInfo" alias="VUserRoleInfo"/>
		<typeAlias type="com.qianfeng.entity.Course" alias="course"/>
	</typeAliases>

	<plugins>
		<!-- com.github.pagehelper为PageHelper类所在包名 -->
		<plugin interceptor="com.github.pagehelper.PageInterceptor">
			<!-- 使用下面的方式配置参数，后面会有所有的参数介绍 -->
			<property name="helperDialect" value="mysql"/>
		</plugin>
	</plugins>


	
</configuration>


