<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qianfeng.dao.UserRoleMapper">
  <resultMap id="BaseResultMap" type="com.qianfeng.entity.UserRoleKey">
    <id column="uid" jdbcType="INTEGER" property="uid" />
    <id column="rid" jdbcType="INTEGER" property="rid" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="com.qianfeng.entity.UserRoleKey">
    delete from t_userrole
    where uid = #{uid,jdbcType=INTEGER}
      and rid = #{rid,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.qianfeng.entity.UserRoleKey">
    insert into t_userrole (uid, rid)
    values (#{uid,jdbcType=INTEGER}, #{rid,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.qianfeng.entity.UserRoleKey">
    insert into t_userrole
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="uid != null">
        uid,
      </if>
      <if test="rid != null">
        rid,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="uid != null">
        #{uid,jdbcType=INTEGER},
      </if>
      <if test="rid != null">
        #{rid,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

    <resultMap id="userRoleMap" type="com.qianfeng.vo.VUserRoleInfo">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="no" jdbcType="VARCHAR" property="no" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="flag" jdbcType="INTEGER" property="flag" />

        <collection property="list"
                    javaType="java.util.ArrayList"
                    ofType="com.qianfeng.entity.Role"
        >
            <id column="rid" jdbcType="INTEGER" property="id" />
            <result column="info" jdbcType="VARCHAR" property="info" />
        </collection>
    </resultMap>

    <!--查询所有用户角色信息-->
  <select id="findAllRole" resultMap="userRoleMap">
  select u.id, u.no, u.name, u.flag ,r.info, r.id rid from t_user u
  inner join t_userrole ur
  on u.id = ur.uid
  inner join t_role r
  on ur.rid = r.id
</select>

  <delete id="deleteRole" parameterType="com.qianfeng.entity.UserRoleKey">
    delete from t_userrole where uid = #{uid}
  </delete>
  <select id="searchByCondition" resultType="com.qianfeng.entity.UserRoleKey">
    select  u.no, u.flag from t_user u
  </select>


  <update id="updateUserRole" parameterType="com.qianfeng.entity.UserRoleKey">
    update t_depart
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="createtime != null">
        Createtime = #{createtime},
      </if>
    </set>
    where id = #{id}
  </update>

</mapper>